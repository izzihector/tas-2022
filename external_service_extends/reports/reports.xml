<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="action_service_ticket_report" model='ir.actions.report'>
            <field name="name">Service Ticket Report</field>
            <field name="report_name">external_service_extends.report_service_ticket_tmpl</field>
            <field name="report_type">qweb-pdf</field>
            <field name="model">project.task.service.ticket</field>
            <field name="report_file">external_service_extends.report_service_ticket_tmpl</field>
            <field name="print_report_name">object.name</field>
        </record>
                

        <!--Formato Formula Maestra de Acondicionado-->
        <record id="paperformat_service_ticket" model="report.paperformat">
            <field name="name">Formato Reporte de Servicio</field>
            <field name="default" eval="True"/>
            <field name="format">Letter</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">15</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">10</field>
            <field name="dpi">110</field>
            <field name="report_ids" eval="[(4, ref('action_service_ticket_report'))]"/>
        </record>

    </data>
</odoo>
